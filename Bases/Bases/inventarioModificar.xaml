<Window x:Class="Bases.inventarioModificar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bases"
        mc:Ignorable="d"
        Title="Modificar articulo" Height="327" Width="389">
    <Grid>
        <Label Content="Modelo" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="modelo" HorizontalAlignment="Left" Height="25" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
        <DataGrid x:Name="lista" HorizontalAlignment="Left" CanUserAddRows="False" Height="108" Margin="10,82,0,0" VerticalAlignment="Top" Width="355"/>
        <Button Content="Buscar" HorizontalAlignment="Left" Margin="290,40,0,0" VerticalAlignment="Top" Width="75" Click="busqueda"/>
        <Button Content="Modificar" HorizontalAlignment="Left" Margin="15,230,0,0" VerticalAlignment="Top" Width="75" Click="modificarFunc"/>
        <Button Content="Atras" HorizontalAlignment="Left" Margin="290,230,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
